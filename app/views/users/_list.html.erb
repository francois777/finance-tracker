<div class="row">
  <div class="col-9">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @friendships.each do |friendship| %>
        <tr>
          <td><%= friendship.friend.full_name %></td>
          <td><%= friendship.friend.email %></td>
          <td>
            <%= link_to 'View Profile', show_profile_path(id: friendship.friend.id),
                            method: :get, class: "btn btn-sm btn-success" %>
            <%= link_to 'Stop following', friendship_path(id: friendship.friend),
                            method: :delete, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
