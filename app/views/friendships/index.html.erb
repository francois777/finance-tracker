<h1>My Friends</h1>
<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_tag search_friends_path, remote: true,  method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :part_name, params[:part_name], placeholder: "Name partial", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="search_friends_results" class="mb-4"></div>

<% if !@friendships.empty? %>
  <%= render 'users/list' %>
<% else %>
  <%= render 'users/empty_list' %>
<% end %>
